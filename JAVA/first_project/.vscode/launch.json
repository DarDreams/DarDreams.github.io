{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://127.0.0.1:3000/index.html",
            "webRoot": "${workspaceFolder}"
        },
        

        {
            // режим launch без сервера
            "name": "Launch index.html, without WebServer",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html"
        },
        
    ]
}

